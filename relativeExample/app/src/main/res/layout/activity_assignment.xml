<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Red     "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:background="@color/red"
        android:padding="20dp" />
    <TextView
        android:id="@+id/txtOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:background="@color/orange"
        android:padding="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txtYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:background="@color/yellow"
        android:padding="20dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/txtGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:background="@color/green"
        android:padding="20dp"
        android:layout_toStartOf="@+id/txtBlue"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/txtBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:background="@color/blue"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:id="@+id/txtIndigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indigo"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:background="@color/indigo"
        android:padding="20dp"
        android:layout_toEndOf="@+id/txtBlue"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txtViolet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Violet"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:background="@color/violet"
        android:padding="20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>